<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links">
            <block class="Unit3\PlayWithLayout\Block\CustomLink" name="custom.link" template="Unit3_PlayWithLayout::custom_link.phtml">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Custom Link</argument>
                    <argument name="path" xsi:type="string">unit3/index/index</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="content.top">
            <block class="Unit3\PlayWithLayout\Block\Test" name="test.test" template="Unit3_PlayWithLayout::test.phtml" />
        </referenceContainer>
    </body>
</page>
